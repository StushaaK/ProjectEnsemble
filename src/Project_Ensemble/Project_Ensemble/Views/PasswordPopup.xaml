<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project_Ensemble.Views.PasswordPopup"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             Size="300, 180">
    <StackLayout Padding="12">
        <Label Text="Pro odstranění účtu se prosím ověřte heslem"></Label>
        <Label Text="Heslo" FontSize="Body" Margin="2,0,0,-10"></Label>
        <Entry Placeholder="Zadejte heslo" IsPassword="True" x:Name ="password"></Entry>
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand">
            <Button Text="Zrušit" Clicked="Cancel_OnClicked" HorizontalOptions="StartAndExpand"  WidthRequest="100" HeightRequest="40" FontSize="10" BackgroundColor="LightGray"/>
            <Button Text="Smazat účet" BackgroundColor="{StaticResource Primary}" TextColor="White" Clicked="Confirm_OnClicked" HorizontalOptions="EndAndExpand" WidthRequest="100" HeightRequest="40" FontSize="10"/>
        </StackLayout>
        
    </StackLayout>
    
</xct:Popup>