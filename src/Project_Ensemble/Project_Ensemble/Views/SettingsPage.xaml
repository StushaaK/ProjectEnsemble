<?xml version="1.0" encoding="utf-8"?>

<ContentPage
    x:Class="Project_Ensemble.Views.SettingsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Nastavení">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label
                FontAttributes="Bold"
                FontSize="Body"
                Text="Zrušení účtu"
                TextTransform="Uppercase" />
            <Button
                Margin="0,20,0,20"
                BackgroundColor="{StaticResource Primary}"
                Command="{Binding DeleteAccCommand}"
                CornerRadius="25"
                Text="Vymazat profil"
                TextColor="White"
                VerticalOptions="Center"
                WidthRequest="300" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>