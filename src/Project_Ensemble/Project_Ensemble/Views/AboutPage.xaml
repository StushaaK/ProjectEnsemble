<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Project_Ensemble.Views.AboutPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="O aplikaci"
    BackgroundColor="{StaticResource Primary}">
    <ContentPage.Content>
        <StackLayout
            Padding="50"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Image Aspect="AspectFit" Source="logo.png" />
            <Label
                FontAttributes="Bold"
                FontSize="35"
                HorizontalOptions="Center"
                Text="Ensemble"
                TextColor="White"
                TextTransform="Uppercase" />

            <StackLayout>
                <Label
                    Margin="0,0,0,20"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center">
                    Projekt Ensemble je Portál pro všechny milovníky hudby, kteří hledají místo, kde najít spoluhráče do své skupiny, či pro jednotlivce, kteří svoji skupinu teprve hledají.
                </Label>
                <Label HorizontalOptions="Center">dev0.0.1a</Label>
                <Label HorizontalOptions="Center">Vyrobil: Daniel Stuš</Label>
                <Label HorizontalOptions="Center">Pomocí technologií XAMARIN.Forms &amp; SQLLite</Label>
            </StackLayout>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>